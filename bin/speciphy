#!/usr/bin/env php
<?php
set_include_path(join(PATH_SEPARATOR, array(
    realpath(__DIR__ . '/../src'),
    realpath(__DIR__ . '/../examples/src'),
    get_include_path(),
)));

require_once 'Speciphy/DSL.php';
require_once 'Speciphy/Describe.php';
require_once 'Speciphy/Loader/SpecFileLoader.php';
require_once 'Speciphy/Loader/SpecFileLoader/SpecFileFilter.php';
require_once 'SpeciphyExamples/Stack.php';

use Speciphy\Loader\SpecFileLoader;

$files = new SpecFileLoader($argv[1]);
var_dump($files);
foreach ($files as $file) {
    var_dump($file);
}
