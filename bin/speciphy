#!/usr/bin/env php
<?php
set_include_path(join(PATH_SEPARATOR, array(
    realpath(__DIR__ . '/../src'),
    realpath(__DIR__ . '/../examples/src'),
    get_include_path(),
)));

require_once 'Speciphy/Autoloader.php';
Speciphy\Autoloader::register();
require_once 'Speciphy/DSL.php';

use Speciphy\Loader\SpecFileLoader;
use Speciphy\ExampleGroupIterator;

$files = new SpecFileLoader($argv[1]);
foreach ($files as $file) {
    $exampleGroup = include $file->getRealpath();
    $iterator = new RecursiveIteratorIterator(new ExampleGroupIterator($exampleGroup), RecursiveIteratorIterator::SELF_FIRST);
    echo $exampleGroup->getDescription(), PHP_EOL;
    foreach ($iterator as $example) {
        echo str_repeat('  ', $example->getNestLevel());
        echo $example->getDescription(), PHP_EOL;
    }
}
